<!doctype html>

<html>
<head>
	<title>Favor Finder</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="css/bootstrap.css" rel="stylesheet">
	<link href="css/bootstrap-theme.css" rel="stylesheet">
	<link href="css/favorfinder.css" rel="stylesheet">
</head>

<body>

	<div id="navbar-flyout">
  		<ul>
			<li><a href="#">Home</a></li>
			<li><a href="#">My Profile</a></li>
			<li><a href="#">My Appointments</a></li>
			<li><a href="#">Requests for Me</a></li>
			<li><a href="#">Logout</a></li>
		</ul>
	</div>

	<div class="container" id="main-body">
		<div id="menu-bar">
			<a href="#">
				<div id="nav-button">
					<button type="button" class="btn btn-default btn-sm" onclick="showFlyout()">
								<span class="glyphicon glyphicon-align-justify"></span>
					</button>
				</div>
			</a>
			<div id="menu-title"><h1>FAVOR FINDER</h1></div>
			<a href="#">
				<div id="add-button">
					<button type="button" class="btn btn-default btn-sm">
						<span class="glyphicon glyphicon-plus"></span>
					</button>
				</div>
			</a>
		</div>



		<div class="container" id="friends">
			<div class="friend-container">
				<img src="{{imageURL}}" class="img-responsive img-rounded">
				<h3><a href="#" class="friend-name">{{name}}</a></h3>
				<p>{{description}}</p>
				<hr/>
			</div>
		</div>
		<form id="addFriendForm" role="form" method="get" action="/add">
			<h3>Add a friend</h3>
		    <div class="form-group">
		      <label for="name">Name:</label>
		      <input type="text" class="form-control" id="name" placeholder="Name" name="name">
		    </div>
		    <div class="form-group">
		      <label for="description">Description:</label>
		      <input type="text" class="form-control" id="description" placeholder="Description" name="description">
		    </div>
		    <input type="submit" id="submitBtn" class="btn btn-default" value="Add the friend"></input>
		</form>
	</div>

</body>
	<script src="js/jquery-1.11.0.js"></script>
	<script src="js/bootstrap.js"></script>
	<script src="js/favorfinder.js"></script>
</html>
